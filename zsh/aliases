# Pywal themes

alias gruvbox="wal --theme gruvbox-alt"
alias nord="wal --theme base16-nord"
alias noir="wal --theme black"
alias dracula="wal --theme base16-dracula"
alias malkuth="wal --theme malkuth"
alias gotham="wal --theme sexy-gotham"

# Apps
alias vim="nvim"
alias vimk='NVIM_APPNAME="nvim-kickstart" nvim'
alias track="timew"

# Scripts
alias bandcamp="campdown"

# Shortcuts
alias ....="cd .. && cd .. && cd .."
alias ...="cd .. && cd .."
alias ..="cd .."
alias audiodl="youtube-dl -f bestaudio --extract-audio --audio-format mp3 --audio-quality 0 --yes-playlist --add-metadata "
alias cal="cal -3"
alias d="dirs -v"
alias la="lsd -a"
alias ls="lsd"
alias reload="systemctl reload"
alias restart="systemctl restart"
alias selfie="mpv av://v4l2:/dev/video0 --profile=low-latency --untimed --vo=tct"
alias shsh="systemctl suspend"
alias start="systemctl start"
alias stop="systemctl stop"
alias wifi="nmcli device wifi"
alias yt="mpv --ytdl-format=22"
for index ({1..9}) alias "$index"="cd +${index}"; unset index

